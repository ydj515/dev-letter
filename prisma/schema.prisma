// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
}

enum InterestCategory {
  Backend
  Database
  Network
  Java
  Spring
  DevOps
  Frontend
  AI_ML @map("AI/ML")
}

enum IssueStatus {
  DRAFT
  SCHEDULED
  SENT
}

enum DeliveryStatus {
  PENDING
  SENT
  FAILED
}

model Subscriber {
  id                String           @id @default(cuid())
  email             String           @unique
  interests         String[]
  createdAt         DateTime         @default(now())
  lastSentAt        DateTime?
  preferredSendTime String?
  unsubscribedAt    DateTime?
  unsubscribeToken  String           @unique @default(cuid())
  deliveries        IssueDelivery[]
}

model NewsletterIssue {
  id           String         @id @default(cuid())
  category     InterestCategory
  title        String
  qaPairs      Json           @db.JsonB
  generatedAt  DateTime       @default(now())
  publishDate  DateTime
  scheduledFor DateTime?
  sentAt       DateTime?
  status       IssueStatus    @default(DRAFT)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  deliveries   IssueDelivery[]
  metric       IssueMetric?
  adminActions AdminActionLog[]

  @@unique([category, publishDate])
}

model IssueDelivery {
  id            String         @id @default(cuid())
  issueId       String
  subscriberId  String
  status        DeliveryStatus @default(PENDING)
  error         String?
  sentAt        DateTime?
  createdAt     DateTime       @default(now())

  issue       NewsletterIssue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  subscriber  Subscriber      @relation(fields: [subscriberId], references: [id], onDelete: Cascade)

  @@index([issueId])
  @@index([subscriberId])
  @@unique([issueId, subscriberId])
}

model IssueMetric {
  id               String          @id @default(cuid())
  issueId          String          @unique
  sentCount        Int             @default(0)
  failedCount      Int             @default(0)
  pendingCount     Int             @default(0)
  successRate      Float           @default(0)
  lastCalculatedAt DateTime        @default(now())

  issue NewsletterIssue @relation(fields: [issueId], references: [id], onDelete: Cascade)
}

model AdminActionLog {
  id        String          @id @default(cuid())
  issueId   String?
  actor     String
  action    String
  metadata  Json?           @db.JsonB
  createdAt DateTime        @default(now())

  issue NewsletterIssue? @relation(fields: [issueId], references: [id], onDelete: SetNull)

  @@index([issueId])
}
